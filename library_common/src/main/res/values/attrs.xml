<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--自定义字体-->
    <declare-styleable name="CommonTypefaceTextView">
        <attr name="common_typeface">
            <enum name="fzlLTypeface" value="1" />
            <enum name="fzdb1Typeface" value="2" />
            <enum name="futuraTypeface" value="3" />
            <enum name="dinTypeface" value="4" />
            <enum name="lobsterTypeface" value="5" />
        </attr>
    </declare-styleable>

    <!--仿小红书滚动-->
    <!--背景图片-->
    <attr name="commonSrc" format="reference" />
    <!--遮罩层颜色，建议带透明度-->
    <attr name="commonMaskLayerColor" format="color" />
    <!--是否滚动-->
    <attr name="commonIsScroll" format="boolean" />
    <!--滚动速度,建议取值区间 [1,50] -->
    <attr name="commonSpeed" format="integer">
        <enum name="slow" value="1" />
        <enum name="ordinary" value="3" />
        <enum name="fast" value="5" />
    </attr>
    <!-- 滚动方向,默认是竖直方向滚动-->
    <attr name="commonScrollOrientation" format="integer">
        <enum name="toTop" value="0" />
        <enum name="toBottom" value="1" />
        <enum name="toLeft" value="2" />
        <enum name="toRight" value="3" />
    </attr>
    <declare-styleable name="CommonSrcLoopScrollFrameLayout">
        <attr name="commonSrc" />
        <attr name="commonMaskLayerColor" />
        <attr name="commonIsScroll" />
        <attr name="commonSpeed" />
        <attr name="commonScrollOrientation" />
    </declare-styleable>

</resources>